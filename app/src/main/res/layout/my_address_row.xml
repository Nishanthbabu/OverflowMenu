<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"

            android:textSize="26dp"
            android:textColor="#000"
            android:id="@+id/myAddress_row_NameID"
            android:layout_marginLeft="20dp"
            android:gravity="start"
            android:text="Nishanth S"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/myAddress_row_OverfloeMenuID"
            android:src="@drawable/overflow_icon"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/cell_phone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="0.1"
            android:id="@+id/myAddress_row_PhNoID"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Nishanth S"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/location_icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="0.1"
            android:id="@+id/myAddress_row_AddressID"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="SkilledAnswers InfoSolutions Pvt Ltd.
#1417, 4th Main, 20th Cross, 7th Sector, HSR Layout, Bangalore - 560102, Karnataka, India"/>
    </LinearLayout>

</LinearLayout>
