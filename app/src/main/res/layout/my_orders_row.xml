<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="5dp"
    android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="start"
            android:id="@+id/my_orderRow_OrderDateID"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="wed, feb 10,2016"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="end"
        android:id="@+id/my_orderRow_OrderIdID"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1842315349451315"/>

</LinearLayout>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/my_orderRow_Cardview"
        android:orientation="horizontal"
        app:cardCornerRadius="3dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:id="@+id/my_orderRow_imageviewID"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:src="@drawable/paint"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:textColor="#000"
                    android:id="@+id/my_orderRow_productNameID"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Painting"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:textColor="#ff0000"
                    android:id="@+id/my_orderRow_deleverystatusID"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Delevery status"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:id="@+id/my_orderRow_deleverydescID"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Delevered on"
                    />

            </LinearLayout>

        </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>