<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="How much u loved it..!"
        android:textSize="26dp"
        android:layout_margin="5dp"
        android:id="@+id/reviewDilogHowMuchLike"
        android:layout_gravity="center_horizontal" />
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:stepSize="1"
        android:id="@+id/reviewDilogRatting"
        android:layout_gravity="center_horizontal" />
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:lines="10"
        android:typeface="monospace"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:id="@+id/reviewDilogEdittext"
        android:hint="add review here"
        android:gravity="top"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancle"
            android:id="@+id/reviewDilogCancelButton"
            android:layout_weight="0.5"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/reviewDilogNextButton"
            android:layout_weight="0.5"/>
    </LinearLayout>

</LinearLayout>
